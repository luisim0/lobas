{
  "manifest_version": 2,

  "name": "Facturapp",
  "description": "Descarga f√°cilmente facturas desde los servicios digitales del SAT",
  "version": "1.0",
  
  "browser_action": {
    "default_icon": "/Icons/icon48.png",
    "default_popup": "/SrcHTML/popup.html"
  },
  "icons":{
  	"16": "/Icons/icon16.png",
  	"48": "/Icons/icon48.png",
  	"128": "/Icons/icon128.png"
  },
  "content_scripts":[{
  	"matches":[
  		"https://cfdiau.sat.gob.mx/nidp/app/login?id=SATUPCFDiCon*",
  		"https://cfdiau.sat.gob.mx/nidp/*",
  		"https://portalcfdi.facturaelectronica.sat.gob.mx/*"
  	],
  	"js":["/JS/contentscript.js"],
  	"css":["/CSS/menu_style.css"],
  	"run_at":"document_end"
  }],
  "web_accessible_resources": [
    "IMGs/*.png",
    "IMGs/*.gif",
    "/*.html"
  ],
  "background": {
  	"scripts": ["/JS/background.js"],
  	"persistent": false
  },
  "permissions": [
  	"storage",
  	"notifications",
    "tabs",
    "https://ajax.googleapis.com/",
    "http://uberprototech.com/facturapp/"
  ]
}
