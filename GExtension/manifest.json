{
  "manifest_version": 2,

  "name": "Facturapp - Extension",
  "description": "Test extension to interact with SAT services",
  "version": "1.0",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts":[{
  	"matches":["https://cfdiau.sat.gob.mx/*"],
  	"js":["contentscript.js"],
  	"css":["menu_style.css"],
  	"run_at":"document_end"
  }],
  "web_accessible_resources": [
    "IMGs/*.png"
  ],
  "background": {
  	"scripts": ["background.js"],
  	"persistent": false
  },
  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/",
    "http://facturapp.eu.pn/pruebas.php"
  ]
}
